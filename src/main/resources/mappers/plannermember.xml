<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.plannershare.mapper.PlannerMemberMapper">
  <select id="isPlannerMember" resultType="boolean">
    SELECT EXISTS (
    SELECT 1 FROM planners_members
    WHERE planner_id = #{plannerId} AND member_id = #{memberId}
    )
  </select>

  <insert id="insertPlannerMember">
    INSERT INTO planners_members (planner_id, member_id)
    VALUES (#{plannerId}, #{memberId})
  </insert>

</mapper>