<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.plannershare.mapper.PlannerShareMapper">
  <insert id="insertPlannerShare">
    INSERT INTO planners_share (secret_code, password, planner_id)
    VALUES (#{secretCode}, #{password}, #{plannerId})
  </insert>

  <resultMap type="PlannerShare" id="plannerShareMap">
    <id column="id" property="id" />
    <result column="secret_code" property="secretCode" />
    <result column="planner_id" property="plannerId" />
    <result column="password" property="password" />
  </resultMap>
</mapper>